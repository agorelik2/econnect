<br><br>
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card mt-4">
                <div class="card">
                    <div class="card_body">
                        <div class="card-title">
                            <h1>
                                <p id="namelink">{{sel_event.name}}</p>
                            </h1>
                        </div>
                        <div>
                            <p class="card-text"><b>HOST:</b> {{sel_event.fullname}}</p><br>
                            <p class="card-text"><b>DATE:</b> {{sel_event.eventDate}}</p><br>
                            <p class="card-text"><b>TIME:</b> {{sel_event.time}}</p><br>
                            <p class="card-text"><b>LOCATION:</b>{{sel_event.location}}</p><br>
                            <p class="card-text"><b>DESCRIPTION:</b> {{sel_event.description}}</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <br>
    <br>
    <br>

    <div class="row justify-content-center">
        <div class="col-md-8" id="center">
            <div class="card text-center shadow-lg">
                <label for="comment">Invitees</label>
                <ul id="invitee-list" class="list-group-item justify-content-center">
                    {{#each invitee}}
                    <li>
                        {{dataValues.firstname}} {{dataValues.lastname}}
                    </li>
                    {{/each}}
                </ul>
            </div>
            <br>
            <br>
            <form class="clearfix mb-4" action="POST">
                <div class="form-group">
                    <label for="comment">Comments</label>
                    <textarea class="form-control" id="comment" aria-describedby="example-description"
                        placeholder="Whats on your mind?"></textarea>
                </div>
                <button id="submitComment" class="btn btn-primary float-right">Submit</button>
            </form>
            <ul id="comment-list" class="list-group chat">
                {{#each comment mode="prepend"}}
                {{log this.body}}
                <li data-id="{{sel_event.id}}" class="list-group-item">
                    <span class="comment-color">{{dataValues.username}}:</span> {{dataValues.body}}

                </li>
                {{/each}}

            </ul>
            <br><br>
            <a href="/members">‚Üê Back To the List of the Events</a>
        </div>
    </div>
</div>


<input type="hidden" id="event-id" value={{sel_event.id}} />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/event.js"></script>
<script src="/js/members.js"></script>

</div>



